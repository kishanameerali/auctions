@model auctions.Models.AuctionInfo
<div class="form-container">@Html.Partial("NavBar")</div>
<h2>New Auction</h2>

<form method="post" asp-controller="Auction" asp-action="add">
    <div class="form-group">
        <span asp-validation-for="NewAuction.product"></span>
        <label asp-for="NewAuction.product"></label>
        <input class="form-control" asp-for="NewAuction.product">
    </div>
    <div class="form-group">
        <span asp-validation-for="NewBid.amount"></span>
        <label asp-for="NewBid.amount"></label>
        <input class="form-control" asp-for="NewBid.amount">
    </div>
    <div class="form-group">
        <span asp-validation-for="NewAuction.description"></span>
        <label asp-for="NewAuction.description"></label>
        <textarea class="form-control" asp-for="NewAuction.description" row="8" cols="80"></textarea>
    </div>
    <div class="form-group">
        <span asp-validation-for="NewAuction.end_date"></span>
        <label asp-for="NewAuction.end_date"></label>
        <input class="form-control" asp-for="NewAuction.end_date">
    </div>
    <input type="submit" value="Create Auction">
</form>